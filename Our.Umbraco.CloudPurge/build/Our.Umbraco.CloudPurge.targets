<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <CloudPurgeContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Our.Umbraco.CloudPurge\**\*.*</CloudPurgeContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyCloudPurgeAssets" BeforeTargets="Build">
        <ItemGroup>
            <CloudPurgeContentFiles Include="$(CloudPurgeContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying CloudPurge files: $(CloudPurgeContentFilesPath) - #@(CloudPurgeContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(CloudPurgeContentFiles)"
            DestinationFiles="@(CloudPurgeContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.CloudPurge\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearCloudPurgeAssets" BeforeTargets="Clean">
        <ItemGroup>
            <CloudPurgeDir Include="$(MSBuildProjectDirectory)\App_Plugins\CloudPurge\" />
        </ItemGroup>
        <Message Text="Clear old CloudPurge data"  Importance="high" />
        <RemoveDir Directories="@(CloudPurgeDir)"  />
    </Target>

</Project>
